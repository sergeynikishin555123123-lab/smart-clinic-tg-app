generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(cuid())
  telegramId   BigInt   @unique
  username     String?
  firstName    String
  lastName     String?
  email        String?
  phone        String?
  city         String?
  specialization String?
  
  // Подписка и прогресс
  subscription Subscription?
  userProgress UserProgress[]
  
  // Контент
  favoriteContent FavoriteContent[]
  userMaterials   UserMaterial[]
  
  // Транзакции
  transactions   Transaction[]
  
  // Системные поля
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  isActive      Boolean  @default(true)
  lastActivity  DateTime @default(now())

  @@map("users")
}

model Subscription {
  id          String   @id @default(cuid())
  userId      String   @unique
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  status      String   // active, inactive, cancelled
  tariff      String   // monthly, quarterly, yearly
  startDate   DateTime
  endDate     DateTime
  autoRenew   Boolean  @default(false)
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("subscriptions")
}

model UserProgress {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  level       String   // Понимаю, Связываю, Применяю, Систематизирую, Делюсь
  progress    Json     // Храним прогресс по каждому уровню
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([userId, level])
  @@map("user_progress")
}

model Content {
  id          String   @id @default(cuid())
  type        String   // course, podcast, video, material, event, offer
  title       String
  description String?
  content     Json?    // Детали контента в зависимости от типа
  tags        String[]
  isPremium   Boolean  @default(false)
  isActive    Boolean  @default(true)
  
  // Связи
  favoriteContent FavoriteContent[]
  userMaterials   UserMaterial[]
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("content")
}

model FavoriteContent {
  id        String   @id @default(cuid())
  userId    String
  contentId String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  content   Content  @relation(fields: [contentId], references: [id], onDelete: Cascade)
  
  createdAt DateTime @default(now())

  @@unique([userId, contentId])
  @@map("favorite_content")
}

model UserMaterial {
  id        String   @id @default(cuid())
  userId    String
  contentId String
  folder    String   // watch_later, favorites, practice
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  content   Content  @relation(fields: [contentId], references: [id], onDelete: Cascade)
  
  createdAt DateTime @default(now())

  @@unique([userId, contentId, folder])
  @@map("user_materials")
}

model Transaction {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  type        String   // subscription, course, product
  amount      Float
  status      String   // pending, completed, failed
  paymentData Json?    // Данные платежной системы
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("transactions")
}
